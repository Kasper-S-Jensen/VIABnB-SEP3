@page "/Login"
<AuthorizeView>
    <NotAuthorized>
        <div class="mat-layout-grid">
            <div class="mat-layout-grid-inner">
                <div class="mat-layout-grid-cell"></div>
                <div class="mat-layout-grid-cell" style="width: 400px">
                    <MatPaper Elevation="8" Rounded="true" class="d-flex justify-content-center" style="width: 400px">

                        <div class="d-flex flex-column p-3" style="width: 400px">
                            <div class="d-flex justify-content-center p-3">
                                <img class="my-4" width="120" height="120" src="https://cdn.pixabay.com/photo/2017/03/21/02/00/user-2160923_1280.png" alt="">
                            </div>
                            <div hidden="@loginAsHost">
                                <MatTextField Class="d-flex" @bind-Value="@email" Label="Email" Outlined="true" style="width: 300px"/>
                            </div>

                            <div class="d-flex justify-content-between">
                                <MatTextField type="@TxtType" @bind-Value="@password" Dense="true" Label="Password" Outlined="true" style="width: 300px"/> 
                                <span class="pt-2"><MatButton Icon="@IconType" @onclick="@ShowPassword"></MatButton></span>
                               
                            </div>
                            
                            <MatDivider class="my-2"/>
                            <p style="color: red">@ErrorMessage</p>
                            <MatButton Raised="true" OnClick="@(PerformLogin)">Log in</MatButton>
                            <MatDivider class="my-1"/>
                            <MatButton class="my-1" Link="/registerhost">Don't have an account? register here</MatButton>
                        </div>
                    </MatPaper>
                    <p hidden="@IsShow"> <MatProgressBar Indeterminate="true" Reversed="true"></MatProgressBar></p>
                </div>
                <div class="mat-layout-grid-cell"></div>
            </div>
        </div>
    </NotAuthorized>
    <Authorized>
        <p>You are already logged in</p>
    </Authorized>
</AuthorizeView>